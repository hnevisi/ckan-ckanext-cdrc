{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "A reimplementation of the default CKAN dataset schema",
  "about_url": "http://github.com/open-data/ckanext-scheming",
  "dataset_fields": [
    {
      "field_name": "title",
      "validators": "not_empty",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "notes",
      "validators": "not_empty",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data"
    },
    {
      "field_name": "license_id",
      "validators": "not_empty",
      "label": "License",
      "form_snippet": "license.html",
      "help_text": "License definitions and additional information can be found at http://opendefinition.org/"
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "field_name": "product_info",
      "validators": "ignore_missing",
      "label": "Product",
      "form_placeholder": "CDRC Data",
      "preset": "text"
    },
    {
      "field_name": "tag_string",
      "label": "Tags",
      "preset": "tag_string_autocomplete",
      "form_placeholder": "eg. economy, mental health, government"
    },
    {
      "field_name": "date_range",
      "validators": "ignore_missing",
      "label": "Date Range",
      "form_placeholder": "2011",
      "preset": "text"
    },
    {
      "field_name": "collDate",
      "validators": "ignore_missing",
      "label": "Collecting Date",
      "form_placeholder": "27/03/11",
      "preset": "text"
    },
    {
      "field_name": "dataCollector",
      "validators": "ignore_missing",
      "label": "Data Collector",
      "form_placeholder": "ONS",
      "preset": "text"
    },
    {
      "field_name": "update_frequency",
      "validators": "ignore_missing",
      "label": "Update Frequency",
      "form_placeholder": "Yearly",
      "preset": "text"
    },
    {
      "field_name": "geogUnit",
      "validators": "ignore_missing",
      "label": "Geographical Scales",
      "form_placeholder": "Output Area, Lower Layer Super Output Area",
      "preset": "text"
    },
    {
      "field_name": "anlyUnit",
      "validators": "ignore_missing",
      "label": "Analytical Units",
      "form_placeholder": "Person, City",
      "preset": "text"
    },
    {
      "field_name": "dataKind",
      "validators": "ignore_missing",
      "label": "Data Kind",
      "form_placeholder": "CSV, Shapefile",
      "preset": "text"
    },
    {
      "field_name": "bounding_box",
      "validators": "ignore_missing",
      "label": "Bounding box",
      "form_placeholder": "London",
      "preset": "text"
    },
    {
      "field_name": "nation",
      "validators": "ignore_missing",
      "label": "Nation",
      "form_placeholder": "United Kingdom",
      "preset": "text"
    },
    {
      "field_name": "url",
      "validators": "ignore_missing",
      "label": "Source URL",
      "form_placeholder": "http://example.com/dataset.json",
      "display_property": "foaf:homepage",
      "display_snippet": "link.html"
    },
    {
      "field_name": "source",
      "validators": "ignore_missing",
      "label": "Source",
      "form_placeholder": "ONS",
      "preset": "text"
    },
    {
      "field_name": "author",
      "validators": "ignore_missing",
      "label": "Creator",
      "form_placeholder": "Joe Bloggs"
    },
    {
      "field_name": "author_email",
      "validators": "ignore_missing",
      "label": "Creator Email",
      "form_placeholder": "joe@example.com",
      "display_snippet": "email.html",
      "display_email_name_field": "author"
    },
    {
      "field_name": "maintainer",
      "validators": "ignore_missing",
      "label": "Maintainer",
      "form_placeholder": "Joe Bloggs",
      "preset": "text",
      "help_text": "Your input will be masked with CDRC on the public page."
    },
    {
      "field_name": "maintainer_email",
      "validators": "ignore_missing",
      "label": "Maintainer Email",
      "form_placeholder": "joe@example.com",
      "display_snippet": "email.html",
      "display_email_name_field": "maintainer",
      "help_text": "Your input will be masked with CDRC on the public page."
    },
    {
      "field_name": "publisher",
      "validators": "ignore_missing",
      "label": "Publisher",
      "form_placeholder": "Joe Bloggs",
      "preset": "text"
    },
    {
      "field_name": "publisher_email",
      "validators": "ignore_missing",
      "label": "Publisher Email",
      "form_placeholder": "joe@example.com",
      "display_snippet": "email.html",
      "display_email_name_field": "maintainer"
    },
    {
      "field_name": "pub_year",
      "validators": "ignore_missing",
      "label": "Publication Year",
      "form_placeholder": "2011",
      "preset": "text"
    },
    {
      "field_name": "doi",
      "validators": "ignore_missing",
      "label": "DOI",
      "form_placeholder": "10.20390/xxxx",
      "preset": "text"
    },
    {
      "field_name": "geography_url",
      "validators": "ignore_missing",
      "label": "Geography URL",
      "form_placeholder": "http://example.org/boundaries",
      "display_snippet": "link.html"
    },
    {
      "field_name": "attribution",
      "validators": "ignore_missing",
      "label": "Attribution Statement",
      "form_placeholder": "Attribution is required for using this dataset.",
      "preset": "text"
    },
    {
      "field_name": "citation",
      "validators": "ignore_missing",
      "label": "Citation",
      "form_placeholder": "J. Bloggs. In Journal of Data and Anything. 1900. pp.2015-2020",
      "preset": "text"
    },
    {
      "field_name": "map_url",
      "validators": "ignore_missing",
      "label": "CDRC Map URL",
      "form_placeholder": "http://maps.cdrc.ac.uk/",
      "display_property": "foaf:homepage",
      "display_snippet": "link.html"
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    }
  ]
}
